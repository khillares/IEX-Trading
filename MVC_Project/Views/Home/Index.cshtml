@model IEnumerable<MVC_Project.Models.Company>

@{
    ViewData["Title"] = "Company";
}
<h2>Index</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEnabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IexId)
            </th>
            <th>Dividends </th>
            <th>Price </th>
            <th>Largest Trade </th>
            <th>Split </th>


        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEnabled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IexId)
            </td>
            <td>
                <a asp-controller="Home" asp-route-id="@item.Symbol" asp-action="Divident">Dividend</a>
            </td>

            <td>
                <a asp-controller="Home" asp-route-id="@item.Symbol" asp-action="Price">Price</a>
            </td>

            <td>
                <a asp-controller="Home" asp-route-id="@item.Symbol" asp-action="Largest_Trade">Largest Trade</a>
            </td>

            <td>
                <a asp-controller="Home" asp-route-id="@item.Symbol" asp-action="Split">Split Price</a>
            </td>

        </tr>
}
    </tbody>
</table>
